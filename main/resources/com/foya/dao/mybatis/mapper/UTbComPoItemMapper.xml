		(select price from dbo.TB_COM_PO_ITEM where PO_ID = outSourcing.PO_ID and ITEM_ID = osItem.ITEM_ID) PRICE,
		osItem.NUMBER,
		osItem.AP_NUMBER,
		osItem.AP_AMOUNT,
		osItem.AMOUNT
		FROM 
		dbo.TB_SITE_OS_ITEM osItem, 
		dbo.TB_COM_ITEM_MAIN itemMain,
		dbo.TB_SITE_OUTSOURCING outSourcing
		where 
		osItem.OS_ID = outSourcing.OS_ID
		AND osItem.ITEM_ID = itemMain.ITEM_ID
		AND osItem.OS_ID = #{osId}
    </select>
    
