     <select id="selectItemIdByOsId" resultMap="BaseResultMap">
        select 
        (SELECT CAT_NAME FROM TB_COM_ITEM_CAT WHERE CAT_ID=itemMain.MAIN_ITEM) mainItemName, 
	    (SELECT CAT_NAME FROM TB_COM_ITEM_CAT WHERE CAT_ID=itemMain.SUB_ITEM) subItemName, 
	    (SELECT ITEM_NAME FROM TB_COM_ITEM_MAIN WHERE ITEM_ID=itemMain.ITEM_ID) itemIdName, 
