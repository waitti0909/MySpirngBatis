    <select id="getPoitemByPoIdAndUsedBySite" resultMap="BaseResultMap">
		SELECT  A1.PO_ID,A1.ITEM_ID,A1.PRICE, A1.FA_CATEGORY faCategory,ISNULL(A2.siteUesdTimes,'0') siteUsedTimes
		  FROM (
 				SELECT  M.ITEM_ID,P.PO_ID,P.PRICE,C.FA_CATEGORY
     			  FROM TB_COM_PO_ITEM P,TB_COM_ITEM_MAIN M, TB_COM_ITEM_CAT C
   				 WHERE P.ITEM_ID = M.ITEM_ID
   				   AND M.SUB_ITEM = C.CAT_ID
                   AND P.PO_ID = #{poId}) A1 
     LEFT JOIN 
          	   (
        		SELECT A.PO_ID,A.ITEM_ID,COUNT(B.OS_ID) siteUesdTimes
        		  FROM  TB_COM_PO_ITEM A ,TB_SITE_OS_ITEM B
        		 WHERE A.PO_ID = B.PO_ID
         		   AND A.ITEM_ID = B.ITEM_ID
        		 GROUP BY A.PO_ID,A.ITEM_ID
               ) A2 
     ON A1.PO_ID = A2.PO_ID AND A1.ITEM_ID = A2.ITEM_ID
    </select>
    
    <select id="selectFaCategoryByCat" resultMap="BaseResultMap">
		SELECT P.FA_CATEGORY
		FROM TB_COM_PO_ITEM P , TB_COM_ITEM_CAT C, TB_COM_ITEM_MAIN M
		WHERE 1=1
		    AND P.ITEM_ID = M.ITEM_ID
		    AND M.SUB_ITEM = C.CAT_ID
		    AND M.MAIN_ITEM = C.PARENT_CAT
		    AND M.MAIN_ITEM = #{mianItemId}
		    AND M.SUB_ITEM = #{subItemId}
		    AND P.PO_ID = #{poId}
		    AND P.FA_CATEGORY IS NOT NULL
